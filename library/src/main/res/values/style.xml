<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ScheduleCalendarViewWidget" />

    <style name="ScheduleCalendarViewWidget.RecyclerView">
        <item name="rowHeight">64dp</item>
        <item name="timeScaleWidth">64dp</item>
        <item name="dateLabelHeight">72dp</item>
        <item name="gridLineColor">@color/grid_line</item>
        <item name="currentTimeHeight">8dp</item>
        <item name="itemRightPadding">6dp</item>
        <item name="subColumnMargin">1dp</item>
        <item name="headerElevation">8dp</item>
    </style>

    <style name="ScheduleCalendarViewWidget.DateLabel">
        <item name="backgroundColor">?attr/colorSurface</item>
        <item name="dateTextColor">@color/date_label_date_text</item>
        <item name="dayOfWeekTextColor">@color/date_label_day_of_week_text</item>
        <item name="todayColor">?attr/colorPrimary</item>
        <item name="onTodayColor">?attr/colorOnPrimary</item>
        <item name="dateTextSize">16sp</item>
        <item name="dayOfWeekTextSize">12sp</item>
        <item name="todayCirclePadding">2dp</item>
    </style>

    <style name="ScheduleCalendarViewWidget.TimeScale">
        <item name="backgroundColor">?attr/colorSurface</item>
        <item name="textColor">@color/grid_line</item>
        <item name="textSize">14sp</item>
    </style>

    <style name="ScheduleCalendarViewWidget.CurrentTimeView">
        <item name="lineColor">?attr/colorPrimary</item>
    </style>

    <style name="ScheduleCalendarViewWidget.CalendarHeaderView">
        <item name="backgroundColor">?attr/colorSurface</item>
    </style>
</resources>