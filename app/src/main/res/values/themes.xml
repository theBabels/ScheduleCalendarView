<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Schedulecalendarview" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="dateLabelView">@style/AppWidget.DateLabel</item>
        <item name="timeScaleView">@style/AppWidget.TimeScale</item>
        <item name="currentTimeView">@style/AppWidget.CurrentTime</item>
    </style>

    <style name="AppWidget.DateLabel" parent="ScheduleCalendarViewWidget.DateLabel">
        <item name="backgroundColor">?attr/colorSurface</item>
    </style>

    <style name="AppWidget.TimeScale" parent="ScheduleCalendarViewWidget.TimeScale">
        <item name="backgroundColor">?attr/colorSurface</item>
    </style>

    <style name="AppWidget.CurrentTime" parent="ScheduleCalendarViewWidget.CurrentTimeView">
        <item name="lineColor">?attr/colorPrimary</item>
    </style>
</resources>